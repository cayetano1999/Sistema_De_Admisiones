    </div>
</div>
<button class="btn btn-success" id="boton" >Imprimir</button>


<script>

    document.querySelector('#boton').addEventListener('click', agregar);
    var btn = document.getElementById("boton");

    function agregar(){

        btn.style.display = 'none';
        window.print();

    }
   


</script>