@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}



<form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
   
    
    <div class="col-sm-12" style="padding:0px; margin:0px; margin-top:30px;">


        <div class="col-sm-12">
            <center>
                <img src="~/images/student.png" class="text-center" style="width:10%;" />
                <h1 class="text-center">Iniciar Sesión</h1>

                <div asp-validation-summary="All" class="text-danger text-center"></div>
                <div class="form-group col-sm-4 col-lg-offset-4">
                    <input asp-for="Email" type="text" class="form-control" placeholder="Correo Electronico" />
                    <span asp-validation-for="Email"></span>

                </div>

                <div class="form-group col-sm-4 col-lg-offset-4">

                    <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" />
                    <span asp-validation-for="Password"></span>
                </div>

                <div class="form-group col-sm-4 col-lg-offset-4">

                    <button type="submit" class="btn btn-primary form-control">Acceder</button>
                </div>

                <div class="form-group col-sm-4 col-lg-offset-4">

                    <a>No tienes cuenta? </a> <span> <strong> <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Registrate Aquí</a> </strong> </span>

                </div>

                <div class="form-group col-sm-4 col-lg-offset-4">


                    <a asp-action="ForgotPassword">He olvidado mi contraseña</a>

                </div>




            </center>

        </div>

    </div>









